<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Source="Resources/логотип.jpg" HorizontalAlignment="Right" Margin="0,0,657,0"/>
        <TextBlock x:Name="МАОУ_Червишевская_СОШ" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="22" FontFamily="Segoe UI Semibold" Background="{Binding Clip, ElementName=МАОУ_Червишевская_СОШ}" Foreground="#FF571DC3"><Run Language="ru-ru" Text="МАОУ Червишевская СОШ"/></TextBlock>
        <Grid Background="#FFBA7E8A" Panel.ZIndex="-2"></Grid>
        <Grid Grid.Row="2">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ScrollBarColorKey}}"/>
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
